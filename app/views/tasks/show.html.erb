<div class="row justify-content-between align-items-center">
  <div class="col-10">
    <h1><%= @task.title %></h1> 
  </div>
  <div class="col-2">
    <%= link_to raw("<i class='fas fa-edit'></i> Edit this task"), edit_task_path(@task) %>
  </div>
</div>

<p class="description"><%= @task.details %></p>

<% if @task.completed %> 
  <p class="border-bottom pb-2"><i class="fas fa-check-square"></i> This task is completed.</p>
<% else %>
  <p class="border-bottom pb-2"><i class="fas fa-square"></i> This task is not completed yet.</p>
<% end %>

<%= link_to raw("<i class='fas fa-undo-alt'></i> Back to list"), tasks_path %>
