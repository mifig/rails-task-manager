<h1>My tasks</h1>
<ul data-controller="task">
  <% @tasks.each do |task| %>
    <li>
      <div class="row">
        <div class="col-2">
          <% if task.completed %> 
            <i class="fas fa-check-square"></i>
          <% else %>
            <i class="fas fa-square"></i>
          <% end %>
          <%= link_to task.title, task_path(task) %>
        </div>
        <div class="col-1">
          <%= link_to raw("<i class='fas fa-trash'></i>"), task_path(task), method: :delete, data: { action: "click->task#delete" } %>
        </div>
      </div>
    </li>
  <% end %>
</ul>

<%= link_to raw("<i class='fas fa-plus-square'></i> Add a new task"), new_task_path %>
